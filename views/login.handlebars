<h2 class="subtitle is-3">Login</h2>


<form class="box" id="login-form">
  <div class="field">
    <label class="label">Username</label>
    <div class="control">
      <input class="input" type="username" placeholder="username" id="user-login">
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <input class="input" type="password" placeholder="********" id="password-login">
    </div>
  </div>

  <button class="button is-primary">Sign in</button>
  <a href="./signup" type="submit" class="button is-primary">Sign up </a>
</form> 

<script src="/public/js/login.js"></script>
